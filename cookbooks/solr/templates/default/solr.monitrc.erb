check process solr_<%= @app %>_8983
  with pidfile /var/run/solr/<%= @app %>.pid
  start program = "/engineyard/bin/solr <%= @app %> start" as uid <%= @username %> and gid <%= @username %>
  stop program = "/engineyard/bin/solr <%= @app %> stop" as uid <%= @username %> and gid <%= @username %>
  if totalmem is greater than 512 MB for 2 cycles then restart      # eating up memory?
  group solr_<%= @app %>